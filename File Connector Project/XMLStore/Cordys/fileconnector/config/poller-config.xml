<configuration xmlns:FCDP="http://schemas.cordys.com/coe/FileConnector/Poller/1.0">
	<!--  Configuration for test flows -->
	<folder>
		<name>MoveFileTestInput</name>
		<location>poller-test/input-move</location>
		<track-time>1</track-time>
		<trigger>
			<method>ExecuteProcess</method>
			<namespace>http://schemas.cordys.com/bpm/execution/1.0</namespace>
			<organization>o=fileconnector,cn=cordys,o=vanenburg.com</organization>
			<user>cn=mpoyhone,cn=organizational users,o=fileconnector,cn=cordys,o=vanenburg.com</user>
			<parameters>
				<type>definition</type>
				<receiver>3.Business Process Models/CoE/FileConnector/MoveFileTest_vcmdemo10.bpm</receiver>
				<message>
					<inputmsg xmlns="http://schemas.cordys.com/bpm/MoveFileTest">
						<path FCDP:element-data="filepath"/>
						<name FCDP:element-data="filename"/>
						<next_folder FCDP:element-data="configured-folder">CopyFileTestInput</next_folder>
						<waittime>0.5</waittime>
					</inputmsg>
				</message>
				<source>Run from Directory Poller</source>
			</parameters>
		</trigger>
	</folder>
	
	<folder>
		<name>CopyFileTestInput</name>
		<location>poller-test/input-copy</location>
		<track-time>1</track-time>
		<trigger>
			<method>ExecuteProcess</method>
			<namespace>http://schemas.cordys.com/bpm/execution/1.0</namespace>
			<organization>o=fileconnector,cn=cordys,o=vanenburg.com</organization>
			<user>cn=mpoyhone,cn=organizational users,o=fileconnector,cn=cordys,o=vanenburg.com</user>
			<parameters>
				<type>definition</type>
				<receiver>3.Business Process Models/CoE/FileConnector/CopyFileTest_vcmdemo10.bpm</receiver>
				<message>
					<inputmsg xmlns="http://schemas.cordys.com/bpm/CopyFileTest">
						<path FCDP:element-data="filepath"/>
						<name FCDP:element-data="filename"/>
						<next_folder FCDP:element-data="configured-folder">ReadXmlFileTestInput</next_folder>
						<waittime>0.5</waittime>
					</inputmsg>
				</message>
				<source>Run from Directory Poller</source>
			</parameters>
		</trigger>
	</folder>
	
	<folder>
		<name>ReadXmlFileTestInput</name>
		<location>poller-test/input-readxml</location>
		<track-time>1</track-time>
		<trigger>
			<method>ExecuteProcess</method>
			<namespace>http://schemas.cordys.com/bpm/execution/1.0</namespace>
			<organization>o=fileconnector,cn=cordys,o=vanenburg.com</organization>
			<user>cn=mpoyhone,cn=organizational users,o=fileconnector,cn=cordys,o=vanenburg.com</user>
			<move-file>true</move-file>
			<parameters>
				<type>definition</type>
				<receiver>3.Business Process Models/CoE/FileConnector/ReadXmlFileTest_vcmdemo10.bpm</receiver>
				<message>
					<inputmsg xmlns="http://schemas.cordys.com/bpm/ReadXmlFileTest">
						<path FCDP:element-data="filepath"/>
						<name FCDP:element-data="filename"/>
						<next_folder FCDP:element-data="configured-folder">ReadLargeXmlFileTestInput</next_folder>
						<waittime>0.5</waittime>
					</inputmsg>
				</message>
				<source>Run from Directory Poller</source>
			</parameters>
		</trigger>
	</folder>
	
	<folder>
		<name>ReadLargeXmlFileTestInput</name>
		<location>poller-test/input-readlargexml</location>
		<track-time>1</track-time>
		<trigger>
			<method>ExecuteProcess</method>
			<namespace>http://schemas.cordys.com/bpm/execution/1.0</namespace>
			<organization>o=fileconnector,cn=cordys,o=vanenburg.com</organization>
			<user>cn=mpoyhone,cn=organizational users,o=fileconnector,cn=cordys,o=vanenburg.com</user>
			<can-retry>true</can-retry>
			<parameters>
				<type>definition</type>
				<receiver>3.Business Process Models/CoE/FileConnector/ReadLargeXmlFileTest_vcmdemo10.bpm</receiver>
				<message>
					<inputmsg xmlns="http://schemas.cordys.com/bpm/ReadLargeXmlFileTest">
						<path FCDP:element-data="filepath"/>
						<name FCDP:element-data="filename"/>
						<waittime>0.5</waittime>

						<!--  Use this for looping -->						
						<next_folder FCDP:element-data="configured-folder">MoveFileTestInput</next_folder>
					</inputmsg>
				</message>
				<source>Run from Directory Poller</source>
			</parameters>
		</trigger>
	</folder>
</configuration>
